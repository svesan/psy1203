*-- SAS formats --------------------------------------------------------------;
proc format;
  value $ sexfmt  '1'='Male'  '2'='Female';
  value $ sexfmts '1'='M'     '2'='F';
  value   sex      1 ='Male'   2 ='Female';
  value $ cyesno  '1'='Yes'   '0'='No';
  value   yesno    1 ='Yes'    0 ='No';
  value   nt       1 ='F'      2 ='MH' 3='PH' 4='C';
  value   bcfmt    1='82-86' 2='87-91' 3='92-96' 4='97-01' 5='02-06';
run;

